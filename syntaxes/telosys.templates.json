{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "templates.telosys",
	"scopeName": "source.telosys.templates",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#variables" }
	],
	"repository": {
		"comments": {
			"patterns": [
			  { "match": "#.+|#",
				"name": "comment.line.double-slash.telosys.templates"
			  }
			]
		},
		"variables": {
			"patterns": [{
				"name": "string.meta.telosys.templates",
				"match": "([$][a-zA-Z_.-]+)|([$][{][a-zA-Z_.-]+[}])"
			}]
		}
	}
}