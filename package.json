{
    "name": "telosys",
    "displayName": "Telosys",
    "description": "VSCode extension for Telosys entities and templates",
    "version": "4.1.0",
    "publisher": "TelosysTeam",
    "engines": {
        "vscode": "^1.78.2"
      },
    "icon": "img/telosysIcon.png",
    "categories": [
        "Programming Languages", "Snippets"
    ],
    "keywords": [ "Telosys",
        "Model", "Entities",
        "Bundle", "Templates" ],
    "contributes": {
        "languages": [ 
            {
                "id": "telosys.entity",
                "aliases": ["telosys.entity"],
                "extensions": [".entity"],
                "configuration": "./entity/entity-configuration.json"
            },
            {
                "id": "telosys.vm",
                "aliases": ["telosys.vm"],
                "extensions": [".vm"],
                "configuration": "./vm/vm-configuration.json"
            } 
        ],

        "grammars": [ 
            {
                "language": "telosys.entity",
                "scopeName": "source.telosys.entity",
                "path": "./entity/entity-grammar.json"
            },
            {
                "language": "telosys.vm",
                "scopeName": "source.telosys.vm",
                "path": "./vm/vm-grammar.json"
            }
        ],

        "snippets": [
            {
                "language": "telosys.entity",
                "path": "./entity/entity-snippet.json"
            },
            {
                "language": "telosys.vm",
                "path": "./vm/vm-snippet.json"
            }
        ]
    }
}
